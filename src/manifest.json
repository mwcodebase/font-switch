{
  "manifest_version": 2,
  "version": "0.1.0",
  
  "name": "Font Switch",
  "description": "Allows user to change webpage font. For readability or comdeic purposes.",
  
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://blog.lateral.io/*"]
  }],
  
  "page_action": {
    "default_icon": {
      "16": "images/switch_icon16.png",
      "32": "images/switch_icon32.png",
      "64": "images/switch_icon64.png",
      "128": "images/switch_icon128.png"
    }
  },

  "icons": {
    "16": "images/switch_icon16.png",
    "32": "images/switch_icon32.png",
    "64": "images/switch_icon64.png",
    "128": "images/switch_icon128.png"
  }
}